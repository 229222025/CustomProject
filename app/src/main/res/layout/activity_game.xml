<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/id_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/id_fl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.wxj.customview.tanqian.game.GameView
                android:id="@+id/id_game_view"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@color/color_ffffff" />

            <ImageView
                android:id="@+id/id_iv_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/img_pic_user" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_fl_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_iv_dice"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dimen_30" />

            <Button
                android:id="@+id/id_btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_red"
                android:text="开始"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dimen_20" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>